<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HorariosVista" >

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="CAUDANA CAMACHO GERMÁN"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNombre"
        android:layout_below="@+id/tvNombre"
        android:paddingTop="5dp"
        android:text="CALCULO DIF. E INTEG. I" />

    
     <TextView
        android:id="@+id/tvAula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvNombre"
        android:layout_below="@+id/tvMateria"
                android:paddingTop="5dp"
        
        android:text="EDIF. 3K2, 2DO. PISO, MÓDULO 5, CUB. 1" />
     
     
   <TableLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:stretchColumns="1"
       android:gravity="center"
         android:id="@+id/Tabla"
            android:paddingTop="20dp"
         android:layout_below="@+id/tvAula"
       >
       
       <TableRow
        android:id="@+id/Cabecera"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
      >
 
        <TextView
            android:id="@+id/ColLunes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes"
            android:textColor="#005500"
 />
 
        <TextView
            android:id="@+id/ColMartes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Martes"
            android:textColor="#005500"
 />
 
        <TextView
            android:id="@+id/ColMiercoles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miércoles"
            android:textColor="#005500"
      />
 
        <TextView
            android:id="@+id/ColJueves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Jueves"
            android:textColor="#005500"
 />
 
        <TextView
            android:id="@+id/ColViernes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Viernes"
            android:textColor="#005500"
 />
    </TableRow>
    
       <TableRow
        android:id="@+id/SeparadorCabecera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
 
        <FrameLayout
            android:id="@+id/LineaCabecera"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_span="6"
            android:background="#005500" >
        </FrameLayout>
    </TableRow>
    
          <TableRow
        android:id="@+id/Fila1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
 
        <TextView
            android:id="@+id/h1Lun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10–13hr"
            android:layout_column="0"
       />
        <TextView
            android:id="@+id/h1Mie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10–13hr"
            android:layout_column="2"
       />
        
       <TextView
            android:id="@+id/h1Jue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10–13hr"
            android:layout_column="3"
       />
 
    </TableRow>
       
          
            <TableRow
        android:id="@+id/Fila2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
 
        
        <TextView
            android:id="@+id/h2Mar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10–11hr"
            android:layout_column="1"
            
         />
           <TextView
            android:id="@+id/h2Vie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10–11hr"
            android:layout_column="4"  
         />
    </TableRow>
       
            
            
            <TableRow
        android:id="@+id/Fila3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
 
        
        <TextView
            android:id="@+id/h3Mar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="13–14hr"
            android:layout_column="1"
            
         />
           <TextView
            android:id="@+id/h3Vie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="13–14hr"
            android:layout_column="4"  
         />
    </TableRow>
       
   </TableLayout>

</RelativeLayout>